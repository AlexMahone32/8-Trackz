@model _8tracks.User
@{
    Layout = null;
}
<html>
<head>
    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap1.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>

    <div class="container" id="top">
        <div class="row">
            <div class="jumbotron">
                @using (Html.BeginForm("Settings", "User", FormMethod.Get))
                { <h3>Sign Up Form</h3>
                    <label>Username</label>
                    @Html.TextBoxFor(m => m.name)<br />
                    <div>
                        @Html.ValidationMessageFor(m => m.name)
                    </div>
                    <label>New Email</label>
                    @Html.TextBoxFor(m => m.email)<br />

                    <label>New Password</label>
                    @Html.PasswordFor(m => m.pass)<br />
                    <div>
                        @Html.ValidationMessageFor(m => m.pass)
                    </div>
                    <label>Confirm New Password</label>
                    @Html.PasswordFor(m => m.cpass)<br />
                    <div>
                        @Html.ValidationMessageFor(m => m.cpass)
                    </div>
                    <input type="submit" class="btn btn-success btn-large" value="Change Settings" />


                }



            </div>


        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    <footer id="signun">
        <div class="footerlink" id="t">
            <p class="lf">Copyright &copy; 2011 <a href="#">SiteName</a> - All Rights Reserved</p>
            <p class="rf"><a href="http://www.free-css.com/">Free CSS Templates</a> by <a href="http://www.templatemonster.com/">TemplateMonster</a></p>
            <div style="clear:both;"></div>
        </div>
    </footer>
</body>
</html>
