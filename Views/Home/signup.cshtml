@model _8tracks.User
@{
    Layout = null;
}
<html>
<head>
    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap1.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery-ui-1.8.24.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    
        <div class="container" id="top">
            <div class="row">
                <div class="jumbotron">
                    @using (Html.BeginForm("Save", "Home", FormMethod.Post))
                    
                    {
                        @Html.ValidationSummary(true)
                         <h3>Sign Up Form</h3>
                        <label>Username</label>
                        @Html.TextBoxFor(m => m.name)
                        <div>
                            @Html.ValidationMessageFor(m => m.name, string.Empty, new { @class = "text text-danger-has-error" })
                        </div>
                        <label>Email</label>
                        @Html.TextBoxFor(m => m.email)<br />

                        <label>Password</label>
                        @Html.PasswordFor(m => m.pass)
                        <div>
                            @Html.ValidationMessageFor(m => m.pass,  string.Empty, new { @class = "text text-danger-has-error" })
                        </div>
                        <label>Confirm Password</label>
                        @Html.PasswordFor(m => m.cpass)
                        <div>
                            @Html.ValidationMessageFor(m => m.cpass, string.Empty, new { @class = "text text-danger-has-error" })
                        </div>
                        <input type="submit" class="btn btn-success btn-large" value="Sign Up" />


                    }



                </div>
                
                @Scripts.Render("~/Scripts/jquery-1.8.2.js")
                <script>

                    $('#name').blur(function () {
                        var uname = $('#name').val();

                        $.getJSON("/Home/checkUsername?name=" + uname, function (data) {
                            if (data) {
                                alert("Username Not Available");
                            }
                            else {
                                alert("Username Available");
                            }
                        });
                    });

                </script>

            </div>
        </div>
        <script>
            $(document).ready(function () {

                $('#myform').validate({ // initialize the plugin
                    rules: {
                        field1: {
                            required: true,
                            email: true
                        },
                        field2: {
                            required: true,
                            minlength: 5
                        }
                    }
                });

            });
        </script>
  

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

        <footer id="signun">
            <div class="footerlink" id="t">
                <p class="lf">Copyright &copy; 2014 <a href="#">SiteName</a> - All Rights Reserved</p>
                <p class="rf"><a href="http://www.free-css.com/">Zeerak Hameem Bsef11m032</a> by <a href="http://www.templatemonster.com/">TemplateMonster</a></p>
                <div style="clear:both;"></div>
            </div>
        </footer>
</body>
</html>

